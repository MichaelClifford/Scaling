{
	"apiVersion": "apps/beta",
	"kind": "StatefulSet",
	"metadata": {
		"name": "web"
	},
	"spec": {
		"selector": {
			"matchLabels": {
				"app": "nginx"
			}
		},
		"serviceName": "nginx",
		"replicas": 3,
		"template": {
			"metadata": {
				"labels": {
					"app": "nginx"
				}
			},
			"spec": {
				"terminationGracePeriodSeconds": 10,
				"containers": [
					{
						"name": "web",
						"image": "k8s.gcr.io/nginx-slim:0.8",
						"ports": [
							{
								"containerPort": 80
							}
						],
						"volumeMounts": [
							{
								"name": "www"
							}
						],
						"mountPath": "/usr/share/nginx/html"
					}
				]
			}
		},
		"volumeClaimTemplates": [
			{
				"metadata": null,
				"name": "www",
				"spec": null,
				"accessModes": [
					"ReadWriteOnce"
				],
				"storageClassName": "my-storage-class",
				"resources": null,
				"requests": null,
				"storage": "1Gi"
			}
		]
	}
}
